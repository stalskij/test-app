@model Transneft.Web.ViewModels.OverdueViewModel
@using Transneft.Web.ViewModels
@{
    ViewData["Title"] = "Все расчетные приборы с закончившимся сроком проверки";
}

<div class="container">
    <h4>Задания  : #3, #4, #5</h4>
    <div class="row">
        <div class="col-md-12">
            <nav>
                <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Все счетчики : #3</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Все ТН : #4</a>
                    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Все ТТ : #5</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <table class="table" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Номер</th>
                                <th>Тип</th>
                                <th>Дата</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ElectricityMeters)
                            {
                            <tr>
                                <td>@item.Number</td>
                                <td>@item.Type</td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>  @* Создать расширение для DateTime -> toDate() *@
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <table class="table" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Номер</th>
                                <th>Тип</th>
                                <th>Дата</th>
                                <th>КТН</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.VoltageTransformers)
                            {
                                <tr>
                                    <td>@item.Number</td>
                                    <td>@item.Type</td>
                                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                    <td>@item.Ktn</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                    <table class="table" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Номер</th>
                                <th>Тип</th>
                                <th>Дата</th>
                                <th>КТН</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CurrentTransformers)
                            {
                                <tr>
                                    <td>@item.Number</td>
                                    <td>@item.Type</td>
                                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                    <td>@item.Ktt</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>